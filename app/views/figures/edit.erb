<h1>Edit a Figure:</h1>
  <h2>Figure:</h2> <%=@figure.name%>
    <form action="/figures/<%= @figure.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
      <h3>Edit Name:</h3> <input type="text" name="figure[name]" id="figure_name">
      <h3>Edit Title:</h3><input type="text" name="figure[title_ids]">
      <h3>Edit Landmark:</h3><input type="text" name="landmark[name]" id="new_landmark">
    <input type="submit" value="submit" id="Edit Figure">
    </form>
